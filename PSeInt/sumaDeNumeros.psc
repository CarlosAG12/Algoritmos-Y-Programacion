Algoritmo sumaDeNumeros
	Definir num1, num2, suma como real;
	Escribir "Este programa lo que hara es dado dos numeros hara su suma";
	Esperar 2 Segundos;
	Limpiar Pantalla;
	Escribir "Ingresa el primer numero";
	leer num1;
	Escribir "Ingresa el segundo numero";
	leer num2;
	
	suma = num1 + num2;
	
	Escribir "La suma de los numeros: ", num1, " + ", num2, " Es: ", suma;
FinAlgoritmo
